#!/usr/bin/env python

def build(bld):
	prog = bld.create_obj('cc', 'program')
        prog.env['CCFLAGS'] = '-pg -g'
        prog.env['LINKFLAGS'] = '-pg -g'
	prog.target = 'gmv_prof'
	prog.source = 'gmv_prof.vala ../lib/buffer.vala ../lib/bundle.vala ../lib/grammar.vala ../lib/gtkmateview.vala ../lib/onig_wrap.vala ../lib/parser.vala ../lib/pattern.vala ../lib/plist.vala ../lib/range_set.vala ../lib/scanner.vala ../lib/scope.vala ../lib/theme.vala ../lib/view.vala'
	prog.includes = '../lib/'
        prog.libs = 'libonig'
	prog.uselib = 'GTK+ GLIB GOBJECT GTKSOURCEVIEW2 LIBXML GEE onig'
	prog.uselib_local = 'gtkmateview'
	prog.packages = 'gtk+-2.0 gee-1.0 glib-2.0 libxml-2.0 gtksourceview-2.0 oniguruma'
	prog.vapi_dirs = '../vapi'
